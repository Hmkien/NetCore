@model IEnumerable<NetCoreMVC.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a class="btn-primary text-decoration-none" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-StudentID="@item.StudentID">Edit</a> |
                    <a asp-action="Details" asp-route-StudentID="@item.StudentID">Details</a> |
                    <a asp-action="Delete" asp-route-StudentID="@item.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
