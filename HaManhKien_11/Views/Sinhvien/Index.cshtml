@model IEnumerable<HaManhKien_11.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Upload" enctype="multipart/form-data">
    <input type="file" name="file">
    <input type="submit" value="Upload" class="btn btn-success">
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopHoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LopHoc.MaLop)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSinhVien">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSinhVien">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaSinhVien">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
